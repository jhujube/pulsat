<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <ImageView
            android:id="@+id/imageViewDuree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chrono"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewDuree"
            app:layout_constraintLeft_toRightOf="@id/imageViewDuree"
            android:id="@+id/duree"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:text="duree"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewDuree"
            app:layout_constraintRight_toLeftOf="@id/imageViewDuree"
            android:id="@+id/date"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="date"
            />
        <ImageView
            android:id="@+id/imageViewArrivee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewDuree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/to_house"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewArrivee"
            app:layout_constraintLeft_toRightOf="@id/imageViewArrivee"
            android:id="@+id/arrivee"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="x:XX"
            />
        <ImageView
            android:id="@+id/imageViewDepart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/depart"
            app:layout_constraintRight_toLeftOf="@id/depart"
            app:srcCompat="@drawable/from_house"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/depart"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="x:XX"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>