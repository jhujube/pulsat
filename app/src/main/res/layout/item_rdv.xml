<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="7dp"
            android:orientation="horizontal"
            android:id="@+id/adress">
        <ImageView
            android:id="@+id/imageViewLieu"
            android:layout_width="30dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="@+id/adress"
            app:layout_constraintTop_toTopOf="@+id/adress"
            app:layout_constraintBottom_toBottomOf="@+id/adress"
            app:srcCompat="@drawable/house"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/adress_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/street"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Adresse"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/town"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Ville"
                />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/adress"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:id="@+id/timings">

            <ImageView
                android:id="@+id/imageViewDuree"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/chrono"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/duree"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="duree"
                />
            <ImageView
                android:id="@+id/imageViewArrivee"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/to_house"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/arrivee"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="x:XX"
                />
            <ImageView
                android:id="@+id/imageViewDepart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/from_house"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:id="@+id/depart"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="x:XX"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>